---
import Layout from '@/layouts/Layout.astro';
---

<Layout>
  <div class="container mx-auto">
    <div class="max-w-4xl py-10">
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl mb-3">
        Weather Notify
      </h1>

      <p class="text-lg mb-14">
        Get daily weather notifications delievered directly to your email ☀️
      </p>

      <div class="flex gap-4">
        <div>
          <a href="/login" class="btn">Login</a>
        </div>

        <div>
          <a href="/register" class="btn">Register</a>
        </div>
      </div>
    </div>
  </div>
</Layout>
